<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/friend_circle_video_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="true">

    <com.gpfduoduo.videoplayermanager.view.VideoPlayerView
        android:id="@+id/friend_circle_video"
        android:layout_width="@dimen/x200"
        android:layout_height="@dimen/x150"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/friend_circle_video_thumb"
            android:layout_width="@dimen/x200"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop"
            android:layout_height="@dimen/x150"/>

        <ImageView
            android:id="@+id/friend_circle_video_icon"
            android:background="@drawable/app_panel_video_icon"
            android:layout_centerInParent="true"
            android:layout_width="@dimen/x50"
            android:layout_height="@dimen/x50"/>
    </RelativeLayout>
</RelativeLayout>